{
  "extends": "eslint:recommended",
  "editor.formatOnSave": true,
  "[handlebars]": {
    "editor.formatOnSave": false
  },
  "tslint.autoFixOnSave": true,
  "rules": {
    "max-line-length": {
      "options": [160]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
