		.toolbar__title
			.toolbar__site Figma Plugin UI
			.toolbar__divider
				<svg width="16" height="24" viewBox="0 0 16 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" clip-rule="evenodd" d="M4.03174 19.8245L10.0317 3.82446L10.9681 4.17559L4.96807 20.1756L4.03174 19.8245Z" fill="white" fill-opacity="0.4"/>
				</svg>
			.toolbar__page {{ pageName }}

		.toolbar__right
			.avatar T
			.zoom 100%

	.layers-panel
			.layers-panel__header
			.layers-panel__list
				include ../_inc/_layers

	.layout
		.page-container
			a(name="intro")
			.section
				.section__frame.section__frame--intro
					include ../_inc/_intro

			a(name="components")
			.section
				.section__frame.section--section-header.section__frame--components
					include ../_inc/_components
			
			a(name="buttons")
			.section.section--component
				.section__frame
					include ../_inc/_buttons
				
			a(name="checkbox-switch")
			.section.section--component
				.section__frame
					include ../_inc/_checkbox-switch

			a(name="disclosure")
			.section.section--component
				.section__frame
					include ../_inc/_disclosure
			
			a(name="inputs")
			.section.section--component
				.section__frame
					include ../_inc/_inputs

			a(name="icon-input")
			.section.section--component
				.section__frame
					include ../_inc/_icon-input
			
			a(name="icons")
			.section.section--component
				.section__frame
					include ../_inc/_icons
			
			a(name="labels-sections")
			.section.section--component
				.section__frame
					include ../_inc/_label-section
			
			a(name="onboarding")
			.section.section--component
				.section__frame
					include ../_inc/_onboarding-tip
			
			a(name="select-menu")
			.section.section--component
				.section__frame
					include ../_inc/_select-menu
			
			a(name="textarea")
			.section.section--component
				.section__frame
					include ../_inc/_textarea
			
			a(name="visual-bell")
			.section.section--component
				.section__frame
					include ../_inc/_visual-bell

			a(name="tokens")
			.section
				.section__frame.section--section-header.section__frame--tokens
					include ../_inc/_tokens
			
			a(name="colors")
			.section
				.section__frame 
					include ../_inc/_colors
			
			a(name="border-shadows")
			.section
				.section__frame
					include ../_inc/_border-shadow

			a(name="typography")
			.section
				.section__frame
					include ../_inc/_typography

	//javascript
	script(src='js/intersection-observer.js')
	script(src='js/highlight.pack.js')
	script(src='js/main.js')
	script(src='js/figma-plugin-ds.min.js')
	<script>iconInput.init(),disclosure.init(),selectMenu.init({position: 'positionToSelection'})</script>