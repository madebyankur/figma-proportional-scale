doctype html
html(lang='en')
	head
		meta(property='og:title', content='Figma Plugin DS')
		meta(property='og:type' content='website')
		meta(property='og:url', content='https://thomas-lowry.github.io/figma-plugin-ds/')
		meta(property='og:image', content='https://thomas-lowry.github.io/figma-plugin-ds/img/figma-plugin-ds-og.png')
		meta(name='twitter:card', content='summary_large_image')
		meta(name='twitter:creator', content='@negativespaceca')
		meta(name='twitter:title', content='Figma Plugin DS')
		meta(name='twitter:description', content='A UI library for Figma Plugins.')
		meta(name='twitter:image', content='https://thomas-lowry.github.io/figma-plugin-ds/img/figma-plugin-ds-og.png')

		title Figma Plugin DS
		//documentation site CSS
		link(href='css/main.css' rel='stylesheet' type='text/css')

		//figma plugin CSS
		link(href='css/figma-plugin-ds.min.css' rel='stylesheet' type='text/css')

body
	.intersect
	.toolbar
